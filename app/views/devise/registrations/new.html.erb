<script>
new WOW().init();
</script>


<div class="row">
  <div class="col-xs-12 col-md-8 col-md-offset-2">
    <div class="userDataInput">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="card hoverable">

        <h2 class="userDataInput__title">新規登録</h2>
        <% if devise_error_messages!.present? %>
          <section class="wow fadeInDownBig" data-wow-duration="1s" data-wow-iteration="1">
            <div class="userDataInput__error text-danger"><%= devise_error_messages! %></div>
          </section>
        <% end %>
        <div class="row userDataInput__items">
          <div class="col-md-6 input-field">
            <i class="material-icons prefix">account_circle</i>
            <%= f.text_field :name,id:"name",class:"validate" %>
            <label for="name">お名前</label>
          </div>
          <div class="col-md-6 input-field">
            <i class="material-icons prefix">email</i>
            <%= f.email_field :email,id:"email",class:"validate" %>
            <label for="email" data-success="right">E-mail</label>
          </div>
          <div class="col-md-6 input-field">
            <i class="material-icons prefix">cake</i>
            <%= f.date_field :birthday, autofocus: true,id:"birthday",class:"validate" %>
            <label for="birthday">誕生日</label>
          </div>
          <div class="col-md-6 input-field">
            <i class="material-icons prefix">account_circle</i>
            <%= f.number_field :age,maxlength:"2",id:"age",class:"validate" %>
            <label for="icon_prefix">年齢</label>
          </div>
          <div class="col-md-12 input-field">
            <i class="material-icons prefix">person_pin</i>
            <%= f.text_field :address, autofocus: true,id:"address",class:"validate" %>
            <label for="address">住所</label>
          </div>
          <div class="col-md-12 input-field">
            <i class="material-icons prefix">account_circle</i>
            <%= f.text_field :introduction, autofocus: true,id:"introduction",class:"validate" %>
            <label for="introduction">自己紹介</label>
          </div>
          <div class="col-md-6 input-field">
            <i class="material-icons prefix">vpn_key</i>
            <%= f.password_field :password, autocomplete: "off",id:"password" ,class:"validate"%>
            <label for="password">パスワード (<%= @minimum_password_length %>文字以上)</label>
          </div>
          <div class="col-md-6 input-field">
            <i class="material-icons prefix">vpn_key</i>
            <%= f.password_field :password_confirmation, autocomplete: "off",id:"password_confirmation" ,class:"validate" %>
            <label for="password_confirmation">パスワード再入力</label>
          </div>
        </div>
        <div class="actions userDataInput__button">
          <%= f.submit "登録する",class:"btn btn-primary" %>
        </div>
        <div class="userDataInput__links">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

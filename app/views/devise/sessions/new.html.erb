<script>
new WOW().init();
</script>


<div class="row">
  <div class="col-xs-6">
    <div class="userDataInput">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="card hoverable">
          <h2 class="userDataInput__title">ログイン</h2>
          <% if devise_error_messages!.present? %>
            <section class="wow fadeInDownBig" data-wow-duration="1s" data-wow-iteration="1">
              <div class="userDataInput__error text-danger"><%= devise_error_messages! %></div>
            </section>
          <% end %>
          <div class="col-xs-12 input-field">
            <i class="material-icons prefix">email</i>
            <%= f.email_field :email,id:"email" %>
            <label class="active" for="email">ログインID</label>
          </div>
          <div class="col-xs-12 input-field">
            <i class="material-icons prefix">vpn_key</i>
            <%= f.password_field :password, autocomplete: "off",autofocus:"on",id:"password"%>
            <label class="active" for="password">パスワード</label>
          </div>
          <div class="col-xs-12">
          <% if devise_mapping.rememberable? -%>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
          <% end %>
          </div>
          <div class="actions userDataInput__button">
            <%= f.submit "ログイン",class:"btn btn-primary" %>
          </div>
          <div class="userDataInput__links">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>

<div class="row topPage" style="padding:20px;">
  <div class="toppage__layout">
    <p class="">
      Facebookクローン作成中　(・・;)
    </p>
    <p class="toppage__noticeMssage">
      <%= notice %><%= alert %>
    </p>

    <div class="
      col-xs-offset-1 col-xs-10
      col-md-offset-4 col-md-8
      ">
    <p class="toppage_login">
      <% unless user_signed_in? %>
      <div class="row">
        <div class="col-xs-6">
          <div class="userDataInput">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="card hoverable">
                <h2 class="userDataInput__title">ログイン</h2>
                <% if devise_error_messages!.present? %>
                  <section class="wow fadeInDownBig" data-wow-duration="1s" data-wow-iteration="1">
                    <div class="userDataInput__error text-danger"><%= devise_error_messages! %></div>
                  </section>
                <% end %>
                <div class="col-xs-12 input-field">
                  <i class="material-icons prefix">email</i>
                  <%= f.email_field :email,id:"email" %>
                  <label class="active" for="email">ログインID</label>
                </div>
                <div class="col-xs-12 input-field">
                  <i class="material-icons prefix">vpn_key</i>
                  <%= f.password_field :password, autocomplete: "off",autofocus:"on",id:"password"%>
                  <label class="active" for="password">パスワード</label>
                </div>
                <div class="col-xs-12">
                <% if devise_mapping.rememberable? -%>
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                <% end %>
                </div>
                <div class="actions userDataInput__button">
                  <%= f.submit "ログイン",class:"btn btn-primary" %>
                </div>
                <div class="userDataInput__links">
                  <%- if devise_mapping.omniauthable? %>
                    <%- resource_class.omniauth_providers.each do |provider| %>
                      <%= link_to " #{OmniAuth::Utils.camelize(provider)}でサインイン", omniauth_authorize_path(resource_name, provider) %><br />
                    <% end -%>
                  <% end -%>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
    </p>

    <p class="buttom">

    </p>
    </div>
  </div>
</div>

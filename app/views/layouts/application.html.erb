<!DOCTYPE html>
<html>
  <head>
    <title>EXAM3</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-collapse collapse navbar-responsive-collapse">
          <ul class="nav navbar-nav navArea__list">
            <!--<li class="active"><a href="javascript:void(0)">アクティブ</a></li>-->
            <li>
              <%= link_to root_path do %>
                <span class="navArea__itemIcon"><%= mi.home.md_36 %></span>
                <span class="navArea__itemText navArea__itemText--md36">トップページ</span>
              <% end %>
            </li>

            <li class="dropdown"　>
              <a href="bootstrap-elements.html" data-target="#" class="dropdown-toggle" data-toggle="dropdown">
                <span class="navArea__itemDrop">Dropdown</span>
                <i class="material-icons md-36">arrow_drop_down</i>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to 'ユーザー一覧', users_path if user_signed_in? %></li>
                <li><%= link_to 'トピック一覧', users_path if user_signed_in? %></li>
                <li class="divider"></li>
                <li class="dropdown-header">リンク</li>
                <li><a href="javascript:void(0)">リンク</a></li>
              </ul>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <li>
              <%= link_to edit_user_registration_path do %>
                <span class="navArea__itemIcon"><%= mi.person.md_36 %></span>
                <span class="navArea__itemText navArea__itemText--md36">マイページ</span>
              <% end %>
            </li>

              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="glyphicon glyphicon-log-out navArea__itemTwIcon" aria-hidden="true"></i>
                  <span class="navArea__itemTwText navArea__itemText--md36">ログアウト</span>
                <% end %>
              </li>
            <% else %>
            <li>
              <%= link_to new_user_session_path do %>
                <i class="glyphicon glyphicon-log-in navArea__itemTwIcon" aria-hidden="true"></i>
                <span class="navArea__itemTwText navArea__itemText--md36">ログイン</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path do %>
              　<i class="material-icons md-36">person_add</i>
                <span class="navArea__itemText navArea__itemText--md36">サインアップ</span>
              <% end %>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="container">
    <%= yield %>
  </div>
  </body>
</html>

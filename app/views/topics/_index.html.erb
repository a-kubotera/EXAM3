<p id="notice"><%= notice %></p>
<div class="panel panel-default">
  <div class="panel-body">
    <div class="list-group">
      <% @topics.each do |topic| %>
        <div class="list-group-item">
          <div class="row-action-primary">
            <%= profile_img(topic.user,"avatarSize--myPageShow") if profile_img(topic.user) %>
          </div>
          <div class="row-content">
            <div class="least-content">
              <span class="topicIndex__date">
                <%= topic.created_at.strftime("%y/%m/%d %p %l:%M") %>投稿
              </span>
              <ul class="topicIndex__icons">
                <li>
                <%= link_to topic do %>
                  <span class=""><%= mi.pageview.md_24 %></span>
                <% end %>
                </li>
                <% if current_user.id == topic.user_id %>
                  <li>
                  <%= link_to edit_topic_path(topic) do %>
                    <span class=""><%= mi.mode_edit.md_24 %></span>
                  <% end %>
                  </li>
                  <li>
                  <%= link_to topic, method: :delete, data: { confirm: '本当に削除してもよろしいでしょうか？' }  do %>
                    <span class=""><%= mi.delete.md_24 %></span>
                  <% end %>
                  </li>
                <% else %>
                  <li class=""><%= mi.mode_edit.md_24 %></li>
                  <li><%= mi.delete.md_24 %></li>
                <% end %>
              </ul>
            </div>
            <p class="list-group-item-heading"><%= topic.user.name %></p>
            <p class="list-group-item-text"><%= topic.name %></p>
          </div>
        </div>
        <div class="list-group-separator"></div>
      <% end %>
    </div>
  </div>
</div>
